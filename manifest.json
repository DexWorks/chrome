{
	"name": "LiveStyle",
	"description": "LiveStyle â€” live CSS/LESS/SCSS tool of new generation",
	"version": "0.9.0",
	"permissions": [
		"tabs",
		"storage",
		"http://*/*",
		"https://*/*",
		"file:///*"
	],
	"background": {
		"page": "./ui/background.html"
	},
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*", "file:///*"],
		"js": ["./scripts/content-script.js"],
		"run_at": "document_start"
    }],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "devtools_page": "./ui/devtools.html",
	"browser_action": {
		"default_title": "LiveStyle Control Panel",
		"default_popup": "./ui/popup.html",
		"default_icon": "./ui/icon/ba-disabled.png"
	},
	"manifest_version": 2
}